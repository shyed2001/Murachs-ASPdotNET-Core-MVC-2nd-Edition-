@model IEnumerable<Book>

@{
    ViewData["Title"] = " | Manage Books";
}

<h1 class="mb-2">Manage Books</h1>
<ul class="list-group">
    <li class="list-group-item">
        <h5 class="mt-1"><a asp-action="Add">Add a book</a></h5>
    </li>
    <li class="list-group-item">
        <form asp-action="Select" method="post">
            <div class="row">
                <h5 class="col-auto mt-1 mr-5">Select a book</h5>
                <div class="col-auto">
                    <select name="id" class="form-select ml-2 mr-2" 
                        asp-items='@new SelectList(Model, "BookId", "Title")'></select>
                </div>
                <div class="col-auto">
                    <input type="submit" name="Operation" value="Edit"
                        class="btn btn-primary ml-2 mr-2" />

                </div>
                <div class="col-auto">
                    <input type="submit" name="Operation" value="Delete"
                        class="col-auto btn btn-primary ml-2 mr-2" />
                </div>
            </div>
        </form>
    </li>
</ul>