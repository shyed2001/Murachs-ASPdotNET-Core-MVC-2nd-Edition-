@model  BookViewModel

@{
    // this view is used for add, edit, and delete.
    var action = ViewContext.RouteData.Values["action"]!.ToString()!.Capitalize();

    ViewData["Title"] = $" | {action} Book";
}

<h1>@action Book</h1>

<form asp-action="@action" asp-area="Admin" method="post">

    <input type="hidden" asp-for="Book.BookId" />

    @* if deleting, only display title but include title in hidden field for
       delete message. Otherwise, display text boxes and drop-downs for fields*@
    @if (action.EqualsNoCase("delete")) {
        <h5>@Model.Book.Title</h5>
        <input type="hidden" asp-for="Book.Title" />
    }
    else {
        <div class="row mb-2">
            <label asp-for="Book.Title" class="col-form-label col-md-2">Title:</label>
            <div class="col-md-4">
                <input asp-for="Book.Title" class="form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2">
            <label asp-for="Book.Price" class="col-form-label col-md-2">Price:</label>
            <div class="col-sm-4">
                <input type="text" asp-for="Book.Price" class="form-control" />
            </div>
            <div class="col">
                <span asp-validation-for="Book.Price" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2">
            <label asp-for="Book.GenreId" class="col-form-label col-md-2">Genre:</label>
            <div class="col-sm-4">
                <select asp-for="Book.GenreId" class="form-select"
                    asp-items='@new SelectList(Model.Genres, "GenreId", "Name")'>
                </select>
            </div>
            <div class="col">
                <span asp-validation-for="Book.GenreId" class="text-danger"></span>
            </div>
        </div>
        <div class="row mb-2">
            <label asp-for="SelectedAuthors" class="col-form-label col-md-2">Authors:</label>
            <div class="col-sm-4">
                <select asp-for="SelectedAuthors" class="form-select"
                    asp-items='@new MultiSelectList(Model.Authors, "AuthorId", "FullName")'>
                </select>
                (Hold down CTRL or CMD key to select multiple)
            </div>
            <div class="col">
                <span asp-validation-for="SelectedAuthors" class="text-danger"></span>
            </div>
        </div>
    }

    @* when deleting, add whitespace above buttons. Otherwise, offset buttons
       to line up with text boxes *@
    <div class="row">
        <div class="@(action.EqualsNoCase("delete") ? "mt-2" : "offset-md-2")">
            <button type="submit">Save</button>
            <a asp-action="Index" my-button>Cancel</a>
        </div>
    </div>
</form>